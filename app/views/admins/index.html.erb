<%= stylesheet_link_tag 'admin_index.css' %>
<body class = "admin-index">

<h1 style="color:white;">Brokers</h1>
<div class= "table-responsive"> 
<%= link_to "New Broker", new_broker_admin_path, class: 'btn btn-success mb-3' %>
<%= link_to "Pending Brokers", pending_broker_signup_admin_path, class: 'btn btn-success mb-3' %>
  <table class="table table-striped">
    <thead class="thead-light">
      <tr>
        <th scope="col"></th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">View</th>
        <th scope="col">Edit</th>
      </tr>
    </thead>
    <% @brokers.each do |broker| %>
      <tbody>
        <tr>
          <td scope="row"></td>
          <td><%= broker.first_name %></td>
          <td><%= broker.last_name %></td>
          <td><%= broker.email %></td>
          <td><%= link_to '👁‍🗨', broker_portfolio_path(broker) %></td>
          <td><%= link_to '📝', edit_broker_admin_path(broker) %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
<br/><br/>

<h1 style="color:white;">Buyers</h1>
<div class= "table-responsive"> 
  <%= link_to "New Buyer", new_buyer_admin_path, class: 'btn btn-success mb-3' %>
  <br/><br/>
  <table class="table table-striped">
    <thead class="thead-light">
      <tr>
        <th scope="col"></th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">View</th>
        <th scope="col">Edit</th>
      </tr>
    </thead>
    <% @buyers.each do |buyer| %>
      <tbody>
        <tr>
          <td scope="row"></td>
          <td><%= buyer.first_name %></td>
          <td><%= buyer.last_name %></td>
          <td><%= buyer.email %></td>
          <td><%= link_to '👁‍🗨', buyer_portfolio_path(buyer) %></td>
          <td><%= link_to '📝', edit_buyer_admin_path(buyer) %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
<br/><br/>
</body>